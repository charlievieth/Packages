  inline-for:
    - match: \b(?:(async)\s+)?(for)\b
      captures:
        1: storage.modifier.async.bazel
        2: keyword.control.flow.for.generator.bazel
      push:
        - include: comments
        - meta_scope: meta.expression.generator.bazel
        - match: \b(in)\b
          scope: keyword.control.flow.for.in.bazel
          pop: true
        - match: '(?=[)\]}])'
          scope: invalid.illegal.missing-in.bazel
          pop: true
        - include: illegal-names-pop
        - include: target-list

  inline-if:
    - match: \b(if)\b
      scope: keyword.control.flow.if.inline.bazel
    - match: \b(else)\b
      scope: keyword.control.flow.else.inline.bazel

  target-list:
    - match: ','
      scope: punctuation.separator.target-list.bazel
    - match: \(
      scope: punctuation.section.target-list.begin.bazel
      push:
        - include: comments
        - match: ','
          scope: punctuation.separator.target-list.bazel
        - match: \)
          scope: punctuation.section.target-list.end.bazel
          pop: true
        - include: target-list
        - include: name
    - include: name
